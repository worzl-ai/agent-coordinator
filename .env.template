# Environment Configuration Template
# Copy this to .env and update with your actual values

# === DEPLOYMENT ENVIRONMENT ===
ENVIRONMENT=production
PORT=8080
LOG_LEVEL=INFO

# === AUTHENTICATION ===
JWT_SECRET_KEY=your-super-secret-jwt-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# === CLIENT STORAGE CONFIGURATION ===
# Supported types: json_files, database, graph_db, api_endpoint, firestore
CLIENT_STORAGE_TYPE=json_files

# === JSON FILES STORAGE (Default for now) ===
CLIENT_DATA_DIRECTORY=/app/data/clients
CLIENT_FILE_PATTERN={client_id}.json

# === DATABASE STORAGE (for future use) ===
CLIENT_DB_CONNECTION_STRING=
CLIENT_DB_TABLE=client_cards
CLIENT_DB_TIMEOUT=30

# === GRAPH DATABASE STORAGE (for future use) ===
CLIENT_GRAPH_URI=
CLIENT_GRAPH_USERNAME=
CLIENT_GRAPH_PASSWORD=
CLIENT_GRAPH_DATABASE=client_cards

# === API ENDPOINT STORAGE (for future use) ===
CLIENT_API_BASE_URL=
CLIENT_API_KEY=
CLIENT_API_TIMEOUT=30

# === FIRESTORE STORAGE (for future use) ===
GOOGLE_CLOUD_PROJECT=your-project-id
CLIENT_FIRESTORE_COLLECTION=client_cards
GOOGLE_APPLICATION_CREDENTIALS=/app/credentials/service-account.json

# === AGENT ENDPOINTS ===
CONTENT_RESEARCH_AGENT_URL=https://content-research-agent-awlsoz4tpa-uc.a.run.app
TECHNICAL_SEO_AGENT_URL=https://technical-seo-agent-awlsoz4tpa-uc.a.run.app
PROJECT_PLANNING_AGENT_URL=https://project-planning-agent-awlsoz4tpa-uc.a.run.app

# === MONITORING & LOGGING ===
ENABLE_DETAILED_LOGGING=true
LOG_REQUESTS=true
LOG_RESPONSES=false
METRICS_ENABLED=true

# === PERFORMANCE SETTINGS ===
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT=30
AGENT_TIMEOUT=15
RETRY_ATTEMPTS=3

# === CORS SETTINGS ===
CORS_ORIGINS=["https://your-frontend-domain.com", "http://localhost:3000"]
CORS_CREDENTIALS=true

# === RATE LIMITING ===
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST=20

# === HEALTH CHECK SETTINGS ===
HEALTH_CHECK_INTERVAL=60
AGENT_HEALTH_CHECK_TIMEOUT=10
